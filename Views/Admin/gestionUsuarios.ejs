<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestion Usuarios</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <%- include('./../partials/navbarAdmin.ejs') %>

            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
                <div class="card">
                    <div class="card-header bg-light">
                        <h4>Empleados</h4>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered">
                            <thead class="table-light">
                                <tr>
                                    <th>ID</th>
                                    <th>Nombre</th>
                                    <th>Correo</th>
                                    <th>Teléfono</th>
                                    <th>Contraseña</th>
                                    <th>Rol</th>
                                    <th>Restaurante</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody id="empleados-tbody">
                                <!-- Aquí se cargarán los empleados desde el frontend -->
                            </tbody>
                        </table>
                    </div>
                </div>
        
                <!-- Sección para agregar un nuevo empleado -->
                <div class="card mt-4">
                    <div class="card-header bg-light">
                        <h4>Agregar Empleado</h4>
                    </div>
                    <div class="card-body">
                        <form id="form-agregar-empleado">
                            <div class="row">
                                <div class="col-md-2">
                                    <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Nombre">
                                </div>
                                <div class="col-md-2">
                                    <input type="text" class="form-control" id="apellidos" name="apellidos" placeholder="Apellido">
                                </div>
                                <div class="col-md-2">
                                    <input type="text" class="form-control" id="correo" name="correo" placeholder="Usuario de Empleado">
                                </div>
                                <div class="col-md-2">
                                    <input type="text" class="form-control" id="telefono" name="telefono" placeholder="Teléfono">
                                </div>
                                <div class="col-md-2">
                                    <input type="password" class="form-control" id="contrasena" name="contrasena" placeholder="Contraseña">
                                </div>
                                <div class="col-md-2">
                                        <select class="form-select" id="selectRestaurante" name="restaurante">
                                        </select>
                                </div>
                                <div class="col-md-2">
                                    <select class="form-select" id="selectRol">
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <button type="submit" class="btn btn-success" >Crear</button>
                                    <button type="reset" class="btn btn-danger">Cancelar</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="mt-4 text-muted">
                    © 2025 / Todos los derechos reservados / Big Fish
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/scripts/gestionUsuarios.js"></script>
</body>
</html>